<div class="local-sesdashboard-email-details">
    <div class="mb-3">
        <a href="{{back_url}}" class="btn btn-success">
            <i class="fa fa-arrow-left"></i> {{#str}}backtoreport, local_sesdashboard{{/str}}
        </a>
    </div>
    
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fa fa-envelope-open"></i> {{#str}}emaildetails, local_sesdashboard{{/str}}</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="fa fa-info-circle"></i> 
                <strong>Note:</strong> This shows email tracking metadata. The actual email content is not stored for privacy and storage optimization reasons.
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary"><i class="fa fa-info"></i> Basic Information</h5>
                    <table class="table table-borderless">
                        <tr>
                            <td class="font-weight-bold" style="width: 40%; vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-calendar"></i> {{#str}}date, local_sesdashboard{{/str}}:
                            </td>
                            <td style="vertical-align: top;">
                                <strong>{{formatted_date}}</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold" style="vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-envelope"></i> {{#str}}recipient, local_sesdashboard{{/str}}:
                            </td>
                            <td style="vertical-align: top;">
                                <code style="word-break: break-all;">{{email.email}}</code>
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold" style="vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-text-width"></i> {{#str}}subject, local_sesdashboard{{/str}}:
                            </td>
                            <td style="vertical-align: top;">
                                {{email.subject}}
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold" style="vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-flag"></i> {{#str}}status, local_sesdashboard{{/str}}:
                            </td>
                            <td style="vertical-align: top;">
                                {{{email.status_badge}}}
                            </td>
                        </tr>
                    </table>
                </div>
                
                <div class="col-md-6">
                    <h5 class="text-primary"><i class="fa fa-cogs"></i> Technical Information</h5>
                    <table class="table table-borderless">
                        {{#email.messageid}}
                        <tr>
                            <td class="font-weight-bold" style="width: 40%; vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-barcode"></i> {{#str}}messageid, local_sesdashboard{{/str}}:
                            </td>
                            <td style="vertical-align: top;">
                                <code style="word-break: break-all; font-size: 0.85em;">{{email.messageid}}</code>
                            </td>
                        </tr>
                        {{/email.messageid}}
                        
                        {{#email.eventtype}}
                        <tr>
                            <td class="font-weight-bold" style="vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-tag"></i> {{#str}}eventtype, local_sesdashboard{{/str}}:
                            </td>
                            <td style="vertical-align: top;">
                                {{email.eventtype}}
                            </td>
                        </tr>
                        {{/email.eventtype}}
                        
                        {{#email.userid}}
                        <tr>
                            <td class="font-weight-bold" style="vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-user"></i> User ID:
                            </td>
                            <td style="vertical-align: top;">
                                {{email.userid}}
                            </td>
                        </tr>
                        {{/email.userid}}
                        
                        <tr>
                            <td class="font-weight-bold" style="vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-database"></i> Record ID:
                            </td>
                            <td style="vertical-align: top;">
                                {{email.id}}
                            </td>
                        </tr>
                        
                        <tr>
                            <td class="font-weight-bold" style="vertical-align: top; white-space: nowrap;">
                                <i class="fa fa-clock-o"></i> Timestamp:
                            </td>
                            <td style="vertical-align: top;">
                                <code>{{email.timecreated}}</code>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-12">
                    <h5 class="text-primary"><i class="fa fa-info-circle"></i> Status Information</h5>
                    <div class="alert alert-light">
                        {{{email.status_description}}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>